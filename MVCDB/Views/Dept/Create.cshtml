@model Dept
<h2>Add New Entries</h2>
<hr/>

@using(Html.BeginForm())
{
	<div>
		@Html.LabelFor(d=>d.Id)
		@Html.EditorFor(d=>d.Id)
		@Html.ValidationMessageFor(d=>d.Id,"",new{@style = "color:Red"})
	</div>

	<div>
		@Html.LabelFor(d=>d.Name)
		@Html.EditorFor(d=>d.Name)
		@Html.ValidationMessageFor(d=>d.Name,"",new{@style = "color:Red"})
	</div>

	<div>
		@Html.LabelFor(d=>d.Location)
		@Html.EditorFor(d=>d.Location)
		@Html.ValidationMessageFor(d=>d.Location,"",new{@style = "color:Red"})
	</div>
	<br/><br/>
	<input type ="submit" value="Save"/>
}

